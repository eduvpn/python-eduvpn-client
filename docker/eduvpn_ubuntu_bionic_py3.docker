FROM ubuntu:bionic

ADD docker/docker-apt-install /usr/local/bin/docker-apt-install
RUN docker-apt-install \
    gir1.2-gtk-3.0 \
    gir1.2-notify-0.7 \
    libnotify4 \
    python3-gi \
    python3-requests-oauthlib \
    python3-pip \
    python3-setuptools \
    python3-pytest \
    python3-pynacl \
    python3-cryptography

ADD . /code
WORKDIR /code
RUN python3 setup.py install
RUN python3 setup.py test
