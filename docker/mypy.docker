FROM ubuntu:bionic

ADD docker/docker-apt-install /usr/local/bin/docker-apt-install
RUN docker-apt-install \
    gir1.2-gtk-3.0 \
    gir1.2-notify-0.7 \
    libnotify4 \
    python3-gi \
    python3-dbus \
    python3-requests-oauthlib \
    python3-pip \
    python3-pytest \
    python3-cryptography \
    python3-pip

ADD . /code
WORKDIR /code
RUN pip3 install ".[test]"
RUN mypy --config-file=setup.cfg eduvpn tests
