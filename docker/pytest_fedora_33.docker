FROM fedora:31

RUN dnf install -y \
    libnotify \
    gtk3 \
    python3-requests-oauthlib \
    python3-gobject \
    python3-pytest \
    python3-pynacl \
    python3-cryptography \
    python3-dbus \
    NetworkManager-libnm

ADD . /code
WORKDIR /code
RUN mkdir -p /usr/local/lib/python3.6/site-packages/
RUN python3 setup.py install
RUN python3 setup.py test
